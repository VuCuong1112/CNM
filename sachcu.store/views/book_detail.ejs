<% include header%>
<!-- content -->
<div class="container-fluid">
     <div class="row" style="margin-top: 9px;">
        <!-- side image-->
         <div class="col-4">
            <%  
                var item=ArrBook.Book[id-1];
                %>

                <div id="demo" class="carousel slide" data-ride="carousel" style="padding: 0;margin: 0">
                    <ul class="carousel-indicators">
                      <li data-target="#demo" data-slide-to="0" class="active"></li>
                      <%
                      var  i=0;
                      item.SubPhoto.forEach(function(p){
                          %>
                          <li data-target="#demo" data-slide-to="<%=i++%>"></li>
                          <%
                      });
                      %>
                    </ul>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="<%=item.MainPhoto%>">
                      </div>
                      <%
                        item.SubPhoto.forEach(function(p){
                            %>
                            <div class="carousel-item">
                                <img src="<%=p%>">
                              </div>
                            <%
                        });
                      %>   
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#demo" data-slide="prev" style="background:black;width: 30px;height: 40px;margin-top: 240px;">
                      <span class="carousel-control-prev-icon "></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next" style="background:black;width: 30px;height: 40px;margin-top: 240px;">
                      <span class="carousel-control-next-icon"></span>
                    </a>
                  </div>

               
         </div>
         <!-- end side image-->
         <div class="col-8" style="height: 500px;position: absolute;top:86px;right: 1px;">
            <div class="row">
                <div class="col-9" >
                    <!-- detail book-->
                <div class="card" style="border: none; width: 557px;">
                        <div class="card-body">
                          <h4 class="card-title">Thông tin sách</h4>
                          <p class="card-text"><%=item.BookName%></p>
                          <p class="card-text">Tác giả: <%=item.BookAuthor%></p>
                          <p class="card-text">Giá bán: <%=item.BookPrice%></p>
                          <p class="card-text">Tình trạng sách: <%=item.Status%></p>
                          <a type="button" class="btn btn-danger" role="button">
                            <ion-icon name="cart" size="large"></ion-icon>
                            <span>Chọn mua</span>
                          </a>
                        </div>
                <!--end detail book-->
                </div>
                <!--info seller-->
                <div class="col-6" style="margin-top: -292px;position: absolute;right: -222px;z-index: 2;">
                    <div class="card">
                        <div class="card-body">
                          <h4 class="card-title">Thông tin người bán</h4>
                          <%
                          ArrBook.Users.forEach(function(user){
                            user.BookSell.forEach(function(bsell){
                              if(bsell==item.BookID){
                                %>
                                <p class="card-text">User name: <%=user.UserName%></p>
                                <img src="<%=user.UserImg%>" style="width: 80px;height: 100px;">
                                <p>Địa chỉ liên hệ: <%=user.UserLocation%></p>
                                <p>Số điện thoại: <%=user.UserPhoneNumber%></p>
                                <a type="button" class="btn btn-success" role="button">
                                  <ion-icon name="chatboxes" size="large"></ion-icon>
                                  <span>Nhắn tin cho người bán</span>
                                </a>
                                <%
                              }
                            })
                          })
                          %>
                          
                        </div>
                      </div>
                       <!--end infor seller-->
                </div>
            </div>
        </div>
     </div>
<%
 %>
</div>
<!--end content -->
<% include footer%>


